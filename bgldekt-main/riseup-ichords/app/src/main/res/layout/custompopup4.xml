<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F14"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/view_popup_main_4"
        android:layout_width="347dp"
        android:layout_height="255dp"
        android:background="@drawable/vtr_caixaedit_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_popup_4"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:background="@drawable/vtr_botaologin_login"
        android:text="Avançar"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@id/view_popup_main_4"
        app:layout_constraintEnd_toEndOf="@id/view_popup_main_4"
        app:layout_constraintBottom_toBottomOf="@id/view_popup_main_4"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Aproveite os desafios diários e mensais e ganhe ainda mais pontos totais para conquistar suas insígnias."
        android:paddingHorizontal="12dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/view_popup_main_4"
        app:layout_constraintEnd_toEndOf="@id/view_popup_main_4"
        app:layout_constraintBottom_toTopOf="@id/button_popup_4"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_logo_ichords"
        app:layout_constraintStart_toStartOf="@id/view_popup_main_4"
        app:layout_constraintEnd_toEndOf="@id/view_popup_main_4"
        app:layout_constraintTop_toTopOf="@id/view_popup_main_4"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>