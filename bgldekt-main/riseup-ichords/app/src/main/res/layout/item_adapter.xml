<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_pop_nacional"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/vtr_caixaedit_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_blue"
        app:layout_constraintStart_toStartOf="@id/view_pop_nacional"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@id/view_pop_nacional"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/text_item_dois"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@id/text_item"
        app:layout_constraintBottom_toTopOf="@id/text_item"
        android:layout_marginBottom="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>